
<!-- include header -->
    <%- include('include/_header') %>
<!-- /include header -->


    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="wrap">
                    
                    <div class="search">
                       <input type="text" id="myInput" class="searchTerm" name="search" placeholder="Search">
                    </div>
                </div>

                    <div class="dropdown">
                        <button class="dropbtn">Filter By <i class="far fa-caret-square-down"></i> </button>
                        <div class="dropdown-content">
                            <a onclick="sortTable(3)" >Class</a>
                            <a onclick="sortTable(4)" >Subject</a>
                        </div>
                    </div>  

                  <a href="/add-user" class="border-shadow">
                    <span class="text-gradient">New Student <i class="fas fa-user"></i></span>
                 </a>
            </div>
            

            <!-- form handling -->
            <form action="/" method="POST">
                <table id="table" class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Class</th>
                            <th>Subject</th>
                            <th>Marks</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="myTable">
                        <%- include('include/_show') %>
                    </tbody>
                </table>
            </form>
        </div>
        </div>
    </main>
<!-- /Main Site -->


<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->