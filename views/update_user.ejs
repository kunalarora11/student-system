
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Student</h2>
            <span class="text-light">Use the below form to Update an account</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="fname" class="text-light">First Name</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="fname" value="<%= user.fname %>" placeholder="Enter First Name.." required>
        </div>
        <div class="form-group">
            <label for="lname" class="text-light">Last Name</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="lname" value="<%= user.lname %>" placeholder="Enter Last Name.." required>
        </div>
        <div class="form-group">
            <label for="class" class="text-light">Class</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="class" value="<%= user.class %>" placeholder="Enter Class.." required>
        </div>
        <div class="form-group">
            <label for="subject" class="text-light">Subject</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="subject" value="<%= user.subject %>" placeholder="Enter Subject.." required>
        </div>
        <div class="form-group">
            <label for="marks" class="text-light">Marks</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="marks" value="<%= user.marks %>" placeholder="Enter Marks.." required>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

